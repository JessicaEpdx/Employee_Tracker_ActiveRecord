<div class="row">
  <div class="col-sm-10">
    <h1><%=@project.description%></h1>
    <form action='/success/project' method='post'>
      <input name="_method" type="hidden" value="delete">
      <input name="id" id="id" type="hidden" value="<%=@project.id%>">

      <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete Project</button>
      </div>
    </form>
  </div>
  <div class="col-sm-2">
    <form action='/' method='get'>
      <div style= "margin-top: 30px;" class="form-group">
        <button type="submit" class="btn btn-warning">Home</button>
      </div>
    </form>
  </div>
</div>

<br><br>


<form action='/project/<%=@project.id%>' method='post'>
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <select name="employee">
    <%@all_employees.each() do |employee|%>
    <option name="employee" id="employee" value="<%=employee.name()%>"><%=employee.name%></option>
    <%end%>
    </select>
    <button type="submit" class="btn btn-success">Add Employee</button>
  </div>
</form>


<br>

<h2>Employees on this project</h2>
<ul>
<%@project.employees.each do |employee|%>
<li style="font-size:20px;"><%=employee.name%>
  <form action='/project/<%=@project.id%>' method="post">
    <input name="_method" type="hidden" value="delete">
    <input name="employee_id" type="hidden" value="<%=employee.id%>">
    <button type="submit" class="btn btn-danger">Remove Employee From Project</button>
  </form>
</li>
<%end%>
</ul>
