<h1>Welcome to Employee Tracker</h1>
<br><br>


<div class="row">
  <div class="col-sm-12">
    <form action='/' method='post'>
      <div class="form-group">
        <label for="name">Division Name</label>
        <input name="name" id="name" type="text">

        <button type="submit" class="btn btn-success">Add Division</button>
      </div>
    </form>
</div>
</div>



<div class="row">
  <div class="col-sm-6">
    <h3>List of Divisions</h3>
    <ul>
    <% @divisions.each do |d| %>
      <li><a href="division/<%=d.id%>"><%= d.name() %></a></li>
      <% end%>
    </ul>
  </div>
  <div class="col-sm-6">
    <h3>List of Employees</h3>
    <ul>
      <% @all_employees.each do |e| %>
      <li><%= e.name()%></li>
      <% end%>
    </ul>
  </div>
</div>
