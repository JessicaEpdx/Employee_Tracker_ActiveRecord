<div class="row">
  <div class="col-sm-10">
    <h1><%=@division.name %></h1>
    <form action='/' method='post'>
      <input name="_method" type="hidden" value="delete">
      <input name="id" id="id" type="hidden" value="<%=@division.id%>">

      <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete Division</button>
      </div>
    </form>
  </div>
  <div class="col-sm-2">
    <form action='/' method='get'>
      <div style= "margin-top: 30px;" class="form-group">
        <button type="submit" class="btn btn-warning">Home</button>
      </div>
    </form>
  </div>
</div>

<br><br><br>

<form action='/division/<%=@division.id%>' method='post'>
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="name">Change Division Name</label>
    <input name="name" id="name" type="text">

    <button type="submit" class="btn btn-success">Change Division</button>
  </div>
</form>


  <form action='/division/<%=@division.id%>/employee' method='post'>
    <input name="_method" type="hidden" value="patch">
    <div class="form-group">
      <label for="employee_name">Employee Name</label>
      <input name="employee_name" id="employee_name" type="text">

      <button type="submit" class="btn btn-success">Add Employee</button>
    </div>
  </form>

<h3>All employees in this Division</h3>

<ul>
  <%@division.employees.each do |employee| %>
  <li><%= employee.name%></li>
  <%end %>
</ul>
