<div class="row">
  <div class="col-sm-10">
    <h1><%=@employee.name %></h1>
    <form action='/success' method='post'>
      <input name="_method" type="hidden" value="delete">
      <input name="id" id="id" type="hidden" value="<%=@employee.id%>">

      <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete Employee</button>
      </div>
    </form>
  </div>
  <div class="col-sm-2">
    <form action='/' method='get'>
      <div style= "margin-top: 30px;" class="form-group">
        <button type="submit" class="btn btn-warning">Home</button>
      </div>
    </form>
  </div>
</div>

<br><br><br>

<form action='/employee/<%=@employee.id%>' method='post'>
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="name">Change Employee Name</label>
    <input name="name" id="name" type="text">

    <button type="submit" class="btn btn-success">Change Employee</button>
  </div>
</form>
